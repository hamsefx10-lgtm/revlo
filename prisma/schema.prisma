model WorkshopJob {
  id             String        @id @default(uuid()) @map("_id")
  jobNumber      String        // e.g. JOB-1001
  name           String        
  description    String?
  status         String        @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED, STOCK, SOLD
  
  startDate      DateTime      @default(now())
  completionDate DateTime?

  // Costs
  materialCost   Float       @default(0)
  laborCost      Float       @default(0)
  overheadCost   Float       @default(0)
  totalCost      Float       @default(0)

  // Link to created product if finished
  generatedProductId String?
  
  projectId      String?       
  customerId     String?       
  companyId      String

  company        Company       @relation(fields: [companyId], references: [id])
  project        Project?      @relation(fields: [projectId], references: [id])
  customer       Customer?     @relation(fields: [customerId], references: [id])
  
  expenses       JobExpense[]

  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@map("workshop_jobs")
}

model JobExpense {
  id             String       @id @default(uuid()) @map("_id")
  description    String       
  amount         Float      
  category       String       // MATERIAL, LABOR
  date           DateTime     @default(now())
  
  jobId          String
  job            WorkshopJob  @relation(fields: [jobId], references: [id], onDelete: Cascade)
  
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@map("job_expenses")
}

