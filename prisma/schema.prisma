  id        String      @id @default(uuid()) @map("_id")
  emoji     String
  createdAt DateTime    @default(now())
  messageId String
  userId    String
  message   ChatMessage @relation(fields: [messageId], references: [id])
  user      User        @relation(fields: [userId], references: [id])

  @@unique([messageId, userId])
  @@map("chat_reactions")
}

