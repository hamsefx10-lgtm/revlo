{
  "name": "revlo-app",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "import-excel": "node scripts/import-excel.js",
    "deploy": "npm run build && npm run start",
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "powershell -ExecutionPolicy Bypass -File ./build-win.ps1",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.12.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "jspdf": "^3.0.2",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.395.0",
    "next": "14.2.5",
    "next-auth": "^4.24.11",
    "postgres": "^3.4.7",
    "prisma": "^6.12.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "recharts": "^3.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/jspdf": "^1.3.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/recharts": "^1.8.29",
    "autoprefixer": "^10.4.19",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.revlo.app",
    "productName": "Revlo",
    "directories": {
      "output": "dist"
    },
    "files": [
      ".next/standalone/**/*",
      "public/**/*",
      "electron/**/*",
      "package.json"
    ],
    "asar": false,
    "win": {
      "target": [
        "nsis"
      ],
      "sign": null,
      "signingHashAlgorithms": [],
      "signDlls": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/revlo-logo.png",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/revlo-logo.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
